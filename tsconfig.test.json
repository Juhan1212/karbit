{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@icons/*": ["./app/assets/icons/*"]
    }
  },
  "include": ["test/**/*.ts", "test/**/*.tsx", "app/**/*.ts", "app/**/*.tsx"]
}
